<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>macosx-x86_64</id>
	<formats>
		<format>zip</format>
	</formats>

	<baseDirectory>RinSim-${project.version}-macosx-x86_64</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>

	<componentDescriptors>
		<componentDescriptor>shared-component.xml</componentDescriptor>
	</componentDescriptors>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.eclipse.swt:org.eclipse.swt.cocoa.macosx.x86_64:*:*</include>
				<include>org.eclipse.swt:org.eclipse.swt:*:*</include>
			</includes>

			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>